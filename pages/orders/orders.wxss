/* pages/orders/orders.wxss */
.sub-tab {
    height: 88rpx;
    line-height: 88rpx;
    overflow: hidden;
    background-color: #fff;
    padding-right: 16rpx;
    font-size: 15px;
}
.icon-sub-tab {
    padding-left: 28rpx;
    border-left: 6px solid #ff8500;
}
.orders .sub-tab .label {
    display: block;
    float: left;
    color: #c7c7c7;
}
.orders .sub-tab .span {
    float: right;
    color: #ff8500;
}
.order .order-list {
    display: block;
    margin-top: 0;
    margin-bottom: 16rpx;
}
.order .order-item {
    display: block;
    background-color: #fff;
    border-top: 1px solid #f6f6f6;
}
.item-bder {
    position: relative;
    padding: 24rpx 16rpx 22rpx;
}
.item-bder, .order-box .mb {
    border-bottom: 1px solid #f6f6f6;
}
.order-flow .item-col-box, .orders .item-col-box {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-box;
    display: -o-box;
    display: box;
}
.item-img {
    width: 76px;
    height: 76px;
    margin-right: 16rpx;
    overflow: hidden;
    -webkit-box-pack: center;
    -moz-box-pack: center;
    -ms-box-pack: center;
    -o-box-pack: center;
    box-pack: center;
    -webkit-box-align: center;
    -moz-box-align: center;
    -ms-box-align: center;
    -o-box-align: center;
    box-align: center;
    background: #fff;
}
.item-img image {
    max-width: 100%;
    border: 0;
    width: 152rpx;
    height: 152rpx;
}
.orders .item-col-flex {
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    -ms-box-flex: 1;
    -o-box-flex: 1;
    box-flex: 1;
    overflow: hidden;
}
.orders .item-info .title {
    font-size: 13px;
    color: #4a4a4a;
    height: 80rpx;
    line-height: 20px;
    overflow: hidden;
    word-wrap: break-word;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-pack: center;
    -moz-box-pack: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    -moz-align-items: center;
    align-items: center;
        -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.item-info .sign-txt {
    font-size: 13px;
    color: #c7c7c7;
}
.item-pay .p {
    display: block;
    float: left;
    color: #ff8500;
    font-size: 13px;
}
.item-pay .item-num {
    display: block;
    float: right;
    color: #4a4a4a;
    font-size: 13px;
}
.item-pay .item-num .b {
    display: inline;
    font-weight: 400;
}
.order-box .mb {
    font-size: 26rpx;
    padding: 0 8px;
    height: 46px;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.true-payed {
    display: block;
    float: left;
    color: #ff8500;
    font-size: 16px;
    line-height: 46px;
}
.imb-num {
    font-size: 13px;
    display: block;
    float: left;
    color: #ff8500;
    margin-left: 6px;
    line-height: 45px;
}
.imb-num .b {
    font-size: 32rpx;
    padding-left: 2px;
    font-weight: 400;
}
.imb-btn-box {
    color: #f15353;
    height: 100%;
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: flex-end;
    justify-content: flex-end;
}
.imb-btn {
    display: inline-block;
    color: #fff;
    background: #ff8500;
    border-radius: 4rpx;
    border: 2rpx solid #ff8500;
    margin-left: 6rpx;
    max-width: 150rpx;
    padding: 0 16rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
}
.imb-btn.white {
    background: #fff;
    color: #ff8500;
    border: 1px solid #e98630;
}