    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-flex: 1;
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    color: #fff;
}

.bottom-btns .pin-detail-btns .li{
    -webkit-box-sizing: border-box;
    -ms-box-sizing: border-box;
    -o-box-sizing: border-box;
